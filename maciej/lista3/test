//Maciej Stys lista3 zad2

#include <stdio.h>

int x = 0, y, znacznik = 0, start = 0;
char s = 1;

int main(){
while((s = getchar()) != EOF){
if(s == 'L'){
    putchar(s);
    x++;
    s= getchar();
    putchar(s);
    start = 1;
    y = x;
    while(y){
        printf("    ");
        y--;
    }
}

else if(s == 'P'){
    x--;
    putchar(s);
}

else if(s == ' ' && !start){
    putchar(s);
}

else if (s == '\n'){
    putchar(s);
    start = 1;
    y = x - 1;
    while(y){
        printf("    ");
        y--;
    }
}

else{
    // if(start){
    //     printf("    ");
    // }
    putchar(s);
    start = 0;
}
}

return 0;
}